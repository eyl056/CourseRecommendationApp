<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="#707070" />

    <corners
        android:radius="7dp"/>

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="0dp"
        android:color="#707070" />

</shape>
